{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "target": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "generated"],
  "exclude": ["dist"]
}