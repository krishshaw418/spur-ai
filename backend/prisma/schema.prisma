generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(uuid())
  conversations Conversation[] @relation("user-sessions")
}

model Conversation {
  id        String    @id @default(uuid())
  user      User      @relation("user-sessions", fields: [userId], references: [id])
  userId    String
  messages  Message[] @relation("messages")
  createdAt DateTime  @default(now())
}

enum Role {
  user
  model
}

model Message {
  id             String       @id @default(uuid())
  conversation   Conversation @relation("messages", fields: [conversationId], references: [id])
  conversationId String
  parts          Part[]       @relation("msg-part")
  role           Role         @default(user)
  timeStamp      DateTime     @default(now())
}

model Part {
  id        String  @id @default(uuid())
  order     Int
  text      String
  message   Message @relation("msg-part", fields: [messageId], references: [id])
  messageId String
}
